@model Scrumboard.Web.DAL.Feature

@{
    ViewBag.Title = "Edit Feature";
}

<h2>Edit Feature</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Feature</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ReleaseId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ReleaseId", string.Empty)
            @Html.ValidationMessageFor(model => model.ReleaseId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BusinessValueId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("BusinessValueId", string.Empty)
            @Html.ValidationMessageFor(model => model.BusinessValueId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlannedStart)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PlannedStart)
            @Html.ValidationMessageFor(model => model.PlannedStart)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlannedEnd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PlannedEnd)
            @Html.ValidationMessageFor(model => model.PlannedEnd)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.ProjectId, new { @Value = Model.ProjectId })
            @Html.ValidationMessageFor(model => model.ProjectId)
        </div>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div>
    @{Html.RenderAction("FeatureBacklogItems", "BacklogItem", new { featureId = Model.Id });}
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
